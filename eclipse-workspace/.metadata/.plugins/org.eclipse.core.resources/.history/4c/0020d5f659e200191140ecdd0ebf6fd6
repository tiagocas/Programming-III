package guiao2;
import java.util.Scanner;

public class Video {
	private int id;
	private String name;
	private String category;
	private int minimalAge;
	private boolean booked;
	static Scanner input = new Scanner(System.in);
	
	public Video(int id, String name, String category, int minimalAge) {
		this.id = id;
		this.name = name;
		this.category = category;
		this.minimalAge = minimalAge;
		this.booked = false;
	}
	
	public static String getCategory() {
		String[] categories = {"Acao", "Comedia", "Infantil", "Drama"};
		String categorie =   "[1] Acao"
							+ "[2] Comedia"
							+ "[3] Infantil"
							+ "[4] Drama";
		
		String content = "";
		for(int i=0;i<categories.length;i++) {
			content += "[" + i+1 + "] " + categories[i];
		}
		System.out.println(content);
		int idCategory = input.nextInt() - 1;
		input.nextLine();
		
		return categories[idCategory];
	}
	
	public boolean isBooked() {
		return this.booked;
	}
	
	public void book() {
		this.booked = true;
	}
	
	public void paid() {
		this.booked = false;
	}
	
	public String toString() {
		return this.id + "\t" + this.name + "\t" + this.category + "\t" + this.minimalAge + "\t" + this.booked;
	}
	
	
}
