				System.out.printf("\nTop Right Point of the square");
				System.out.printf("\nX: ");
				System.out.println("\nY: ");
				System.out.printf("\nTop Right Point of the square");
				System.out.printf("\nX: ");
				System.out.println("\nY: ");
				System.out.printf("\nTop Right Point of the square");
				System.out.printf("\nX: ");
				System.out.println("\nY: ");
				break;
			case "2":
				
				break;
			case "3":
				
				break;
			case "4":
				
				break;
