package guiao2;
import java.util.HashMap;

public class Catalog {
	private HashMap<Integer,Video> ctl;
	private int id;
	
	public Catalog() {
		this.id = 0;
		ctl = new HashMap();
	}
	
	public void add(String name, String category, int minimalAge) {
		ctl.put(this.id,new Video(id, name, category, minimalAge));
		this.id++;
		System.out.println("Video added successfuly");
	}
	public void remove(int id) {
		
	}
	public Video search(id) {
		return ctl.get(id);
	}
	public String list() {
		String content = "\tCatalog\n";
		for(int i = 0 ; i < ctl.size(); i++){
			if(ctl.containsKey(i)) {
				content += "id: " + i + "\t" + ctl.get(i).toString() + "\n";
			}
		}
		return content;
	}
	
}
